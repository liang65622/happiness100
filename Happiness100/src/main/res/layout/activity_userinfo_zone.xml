<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <include
        layout="@layout/common_title"></include>

    <RelativeLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/zone_view"
        android:layout_height="@dimen/space_ListItem">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/common_divider"/>

        <TextView
            style="@style/Font_Normal_Black"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:id="@+id/zone_title"
            android:layout_centerVertical="true"
            />
        <TextView
            style="@style/Font_Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东 深圳"
            android:id="@+id/zone_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/zone_title"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/common_divider"/>
    </RelativeLayout>
</LinearLayout>