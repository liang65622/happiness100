<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/select_item"
        android:background="@drawable/selector_item_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.happiness100.app.ui.widget.CircleImageView
            android:id="@+id/search_img_head"
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dip"
            android:src="@drawable/rp_default_head" />


        <TextView
            android:id="@+id/title"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/search_img_head"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="搜索："
            android:textColor="@color/text_tips_color"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/content"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="蒋胜"
            android:textColor="@color/text_tips_color"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/search_img_head"
            android:background="@color/text_line_color" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/nouser_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_line_color" />
       <RelativeLayout
           android:background="@drawable/selector_item_bg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           >
           
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:text="该用户不存在"
               android:textSize="15dp"
               android:textColor="@color/gray"
               android:layout_centerVertical="true"
               />


           
       </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_line_color" />
    </LinearLayout>


</RelativeLayout>