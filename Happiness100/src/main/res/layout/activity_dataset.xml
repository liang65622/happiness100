<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        layout="@layout/common_title"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_ListItem"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="10dp"
        android:id="@+id/record"
        >
        <TextView
            style="@style/Font_Normal_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置备注和标签"
            />

        <ImageView
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            style="@style/Font_Normal_Gray"
            android:id="@+id/remarkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="备注"
            android:layout_toLeftOf="@+id/go"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <Button
            style="@style/Font_Button_White"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除好友"
            android:background="@drawable/btn_common_red_normal"/>
    </RelativeLayout>
</LinearLayout>