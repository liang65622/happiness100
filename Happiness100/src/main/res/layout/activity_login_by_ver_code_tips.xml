<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.happiness100.app.ui.activity.LoginByVerCodeTipsActivity">

    <include layout="@layout/layout_common_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_phone_msg_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_deep_gray"

            android:layout_marginTop="80dp"
            android:textSize="18sp"
            android:text="@string/can_login_by_xf_num_or_phone_msg"/>
        <Button
            android:id="@+id/btn_login_by_vercode"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_pale_red"
            android:textColor="@color/white"
            android:text="@string/login_by_vercode"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
