<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:background="@drawable/bg_default_item_"
              android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#E0E0E0"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:text="A"
        android:textColor="#454545" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/textItem_View"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="75dp">

            <RelativeLayout
                android:background="@color/white"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="74dp">

                <TextView
                    android:id="@+id/textItem_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择一个群"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/textItem_Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right"
                    />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/SelectItem_View"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tab_find_normal"
                android:layout_centerVertical="true"
                android:id="@+id/SelectItem_SelectImage"
                />
            <ImageView

                android:layout_toRightOf="@+id/SelectItem_SelectImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_tab_find_normal"
                android:id="@+id/SelectItem_HeadView"
                android:layout_marginLeft="20dp"
                />

            <TextView
                style="@style/Font_Normal_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈哈"
                android:layout_toRightOf="@+id/SelectItem_HeadView"
                android:layout_centerVertical="true"
                android:layout_marginLeft ="20dp"
                android:id="@+id/SelectItem_NickName"
                />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_divider"/>
</LinearLayout>