<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_img"
            android:layout_width="52dp"
            android:layout_height="52dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_deep_common"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_apply_msg"
                    android:textColor="@color/gray_light_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:textColor="@color/gray_light_common"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"/>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_controll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_agree"
            android:layout_width="77dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_agree"
            android:text="接受"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/btn_refuse"
            android:layout_width="77dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_refuse"
            android:text="拒绝"
            android:textColor="@color/gray_deep_common"/>


    </LinearLayout>

    <Button
        android:id="@+id/tv_refuse"
        android:layout_width="77dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_refused"
        android:text="已拒绝"
        android:textColor="@color/white"
        android:visibility="gone"/>
</RelativeLayout>