<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/common_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/common_divider"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <RelativeLayout
            android:id="@+id/view_binding_account"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/tv_account_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="幸福帐号"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_account_title"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_account_title"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"/>

            <ImageView
                android:id="@+id/iv_headimg"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/iv_arrow_right"
                android:layout_toStartOf="@+id/iv_arrow_right"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="姓名"/>

            <EditText
                android:id="@+id/edit_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入姓名"
                android:textSize="14sp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_select_cw"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_title_cw"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="称谓"/>

            <TextView
                android:id="@+id/tv_select_cw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_title_cw"
                android:hint="点击选择称谓"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_select_gender"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_title_gender"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_title_gender"
                android:textColor="@color/black"
                android:textSize="14sp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_select_rank"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_title_rank"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="排行"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_title_rank"
                android:textColor="@color/black"
                android:textSize="14sp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>