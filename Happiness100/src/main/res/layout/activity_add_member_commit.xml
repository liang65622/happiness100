<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/common_title"/>

    <ImageView
        android:id="@+id/iv_member_img"
        android:layout_width="68dp"
        android:layout_height="68dp"/>

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"/>

    <TextView
        android:id="@+id/tv_member_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_line_color"/>

    <RelativeLayout
        android:id="@+id/rl_select_beifen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_beifen_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="辈  份"/>

        <TextView

            android:id="@+id/tv_beifen_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_beifen_title"
            android:text="请选择备份"/>

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_name_remark"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="称谓备注"/>

        <EditText
            android:id="@+id/edit_name_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_name_remark"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入备注"
            android:maxLength="10"
            android:maxLines="1"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_line_color"/>

    <Button
        android:id="@+id/btn_add_member_commit"
        style="@style/btn_red_deep"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="添加"/>
</LinearLayout>