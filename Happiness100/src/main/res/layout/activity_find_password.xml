<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<include
    layout="@layout/common_title"></include>

    <LinearLayout
        android:divider="@drawable/common_divider"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_ListItem"
            android:background="@drawable/rc_bg_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/mobile_item"
            >

            <ImageView
                android:id="@+id/mobile_item_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_mobile"/>

            <TextView
                style="@style/Font_Normal_Black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_item_text1"
                android:layout_toRightOf="@+id/mobile_item_iamge"
                android:text="已绑定手机号"
                />
            <TextView
                style="@style/Font_Desc"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_item_text2"
                android:layout_below="@+id/mobile_item_text1"
                android:layout_alignLeft="@+id/mobile_item_text1"
                android:text="可通过手机号+短信验证码登录"
                />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_array_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_ListItem"
            android:background="@drawable/rc_bg_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/email_item"
            >

            <ImageView
                android:id="@+id/email_item_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/email"/>

            <TextView
                style="@style/Font_Normal_Black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_item_text1"
                android:layout_toRightOf="@+id/email_item_iamge"
                android:text="已绑定邮箱"
                />
            <TextView
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_item_text2"
                android:layout_below="@+id/email_item_text1"
                android:layout_alignLeft="@+id/email_item_text1"
                style="@style/Font_Desc"
                android:text="可通过邮箱地址重置密码"
                />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_array_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"></View>
    </LinearLayout>

</LinearLayout>