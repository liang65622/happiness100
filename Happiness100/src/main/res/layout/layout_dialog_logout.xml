<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical" >

    <TextView
        style="@style/Font_Desc"
        android:id="@+id/photographBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:gravity="center"
        android:padding="10dip"
        android:text="退出后不会删除任何历史数据，下次登录依然可以使用本帐号。"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/common_divider" />

    <Button
        style="@style/Font_Middle_Pink"
        android:id="@+id/localPhotosBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:gravity="center"
        android:padding="10dip"
        android:text="退出登录"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/common_divider" />

    <Button
        style="@style/Font_Middle_Black"
        android:id="@+id/cancelBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:gravity="center"
        android:padding="10dip"
        android:text="取消"/>

</LinearLayout>