<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/discover_gray"
              android:orientation="vertical">

    <include
        layout="@layout/common_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>

        <RelativeLayout
            android:id="@+id/setting_item_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_ListItem"
            android:background="@drawable/bg_default_item_"
            android:padding="10dp">

            <TextView
                android:id="@+id/account_text"
                style="@style/Font_Normal_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="账号与安全"/>

            <ImageView
                android:id="@+id/account_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_array_right"/>

            <ImageView
                android:id="@+id/account_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/account_text"
                android:src="@drawable/icon_red1"/>
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_item_notify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_ListItem"
                android:background="@drawable/bg_default_item_"
                android:padding="10dp">

                <TextView
                    style="@style/Font_Normal_Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="新消息通知"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_array_right"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/common_divider"/>

            <RelativeLayout
                android:id="@+id/setting_item_privacy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_ListItem"
                android:background="@drawable/bg_default_item_"
                android:padding="10dp">

                <TextView
                    style="@style/Font_Normal_Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="隐私"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_array_right"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/common_divider"/>

            <RelativeLayout
                android:id="@+id/setting_item_common"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_ListItem"
                android:background="@drawable/bg_default_item_"
                android:padding="10dp">

                <TextView
                    style="@style/Font_Normal_Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="通用"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_array_right"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/setting_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_ListItem"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_default_item_"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_update_version"
                style="@style/Font_Normal_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="版本更新"/>

            <TextView
                android:id="@+id/tv_version"
                style="@style/Font_Normal_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_update_version"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_update_version"
                android:text="版本更新"
                android:layout_marginBottom="3dp"
                android:textColor="@color/gray_light_common"
                android:textSize="10sp"/>


            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_array_right"/>

            <ImageView
                android:id="@+id/iv_update_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_update_version"
                android:src="@drawable/icon_red1"
                android:visibility="gone"/>
        </RelativeLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>

        <RelativeLayout
            android:id="@+id/setting_item_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_ListItem"
            android:background="@drawable/bg_default_item_"
            android:padding="10dp">

            <TextView
                style="@style/Font_Normal_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="退出登录"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>