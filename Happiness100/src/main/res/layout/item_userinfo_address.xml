<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/modifyAddress_view"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:visibility="gone"

        >

        <TextView
            style="@style/Font_Normal_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/modifyAddress_view_text_name"
            android:text="饶楠"
            />

        <TextView
            style="@style/Font_Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modifyAddress_view_text_address"
            android:text="北京市这个区往东走有狗叫北京市这个区往东走有狗叫北京市这个区往东走有狗叫"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_below="@+id/modifyAddress_view_text_name"
            android:layout_marginRight="40dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_gth"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/modifyAddress_view_go"
            />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addAddress_view"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addAddress_view_addImage"
            android:src="@drawable/icon_add6"
            android:layout_centerVertical="true"
            />

        <TextView
            style="@style/Font_Normal_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/addAddress_view_text_name"
            android:layout_centerVertical="true"
            android:text="新增地址"
            android:layout_toRightOf="@+id/addAddress_view_addImage"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/addAddress_view_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

</RelativeLayout>